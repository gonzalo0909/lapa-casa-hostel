# lapa-casa-hostel/frontend/.env.local
# Environment Variables - Lapa Casa Hostel Channel Manager
# DO NOT COMMIT THIS FILE TO VERSION CONTROL

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="Lapa Casa Hostel"
NEXT_PUBLIC_APP_VERSION=1.0.0

# ============================================================================
# SITE CONFIGURATION
# ============================================================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000

# ============================================================================
# STRIPE PAYMENT GATEWAY (International Cards)
# ============================================================================
# Get keys from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_51xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_51xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# MERCADO PAGO (Brazilian Market - PIX + Cards)
# ============================================================================
# Get keys from: https://www.mercadopago.com.br/developers/panel
NEXT_PUBLIC_MP_PUBLIC_KEY=APP_USR-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
MP_ACCESS_TOKEN=APP_USR-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ============================================================================
# ANALYTICS & TRACKING
# ============================================================================
# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================================================
# INTERNATIONALIZATION
# ============================================================================
NEXT_PUBLIC_DEFAULT_LOCALE=pt
NEXT_PUBLIC_SUPPORTED_LOCALES=pt,es,en

# ============================================================================
# FEATURE FLAGS
# ============================================================================
NEXT_PUBLIC_ENABLE_GROUP_DISCOUNTS=true
NEXT_PUBLIC_ENABLE_FLEXIBLE_ROOM=true
NEXT_PUBLIC_ENABLE_PIX_PAYMENTS=true
NEXT_PUBLIC_ENABLE_INSTALLMENTS=true
NEXT_PUBLIC_MIN_GROUP_SIZE=7
NEXT_PUBLIC_MAX_BOOKING_MONTHS=12

# ============================================================================
# ROOM CONFIGURATION
# ============================================================================
NEXT_PUBLIC_ROOM_MIXTO_12A_ID=room_mixto_12a
NEXT_PUBLIC_ROOM_MIXTO_12B_ID=room_mixto_12b
NEXT_PUBLIC_ROOM_MIXTO_7_ID=room_mixto_7
NEXT_PUBLIC_ROOM_FLEXIBLE_7_ID=room_flexible_7
NEXT_PUBLIC_BASE_PRICE_BRL=60.00

# ============================================================================
# PRICING RULES
# ============================================================================
NEXT_PUBLIC_DISCOUNT_7_BEDS=0.10
NEXT_PUBLIC_DISCOUNT_16_BEDS=0.15
NEXT_PUBLIC_DISCOUNT_26_BEDS=0.20
NEXT_PUBLIC_SEASON_HIGH_MULTIPLIER=1.50
NEXT_PUBLIC_SEASON_MEDIUM_MULTIPLIER=1.00
NEXT_PUBLIC_SEASON_LOW_MULTIPLIER=0.80
NEXT_PUBLIC_CARNIVAL_MULTIPLIER=2.00
NEXT_PUBLIC_CARNIVAL_MIN_NIGHTS=5

# ============================================================================
# DEPOSIT CONFIGURATION
# ============================================================================
NEXT_PUBLIC_DEPOSIT_PERCENTAGE=0.30
NEXT_PUBLIC_LARGE_GROUP_DEPOSIT=0.50
NEXT_PUBLIC_LARGE_GROUP_THRESHOLD=15
NEXT_PUBLIC_AUTO_CHARGE_DAYS=7

# ============================================================================
# CONTACT INFORMATION
# ============================================================================
NEXT_PUBLIC_CONTACT_EMAIL=reservas@lapacasahostel.com
NEXT_PUBLIC_CONTACT_PHONE=+5521999999999
NEXT_PUBLIC_WHATSAPP_NUMBER=5521999999999
NEXT_PUBLIC_ADDRESS="Rua Silvio Romero 22, Santa Teresa, Rio de Janeiro"

# ============================================================================
# SOCIAL MEDIA
# ============================================================================
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/lapacasahostel
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/lapacasahostel
NEXT_PUBLIC_TRIPADVISOR_URL=https://tripadvisor.com/lapacasahostel

# ============================================================================
# SECURITY
# ============================================================================
# Session secret for JWT (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================================================
# RATE LIMITING
# ============================================================================
NEXT_PUBLIC_API_RATE_LIMIT=100
NEXT_PUBLIC_API_RATE_WINDOW=900000

# ============================================================================
# ERROR TRACKING (Optional)
# ============================================================================
# Sentry DSN
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxx@sentry.io/xxxxxx
SENTRY_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# REDIS CACHE (Production)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# DATABASE (Backend Connection)
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/lapa_casa_hostel

# ============================================================================
# EMAIL SERVICE (Resend.com)
# ============================================================================
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_EMAIL_FROM=noreply@lapacasahostel.com

# ============================================================================
# GOOGLE SHEETS INTEGRATION
# ============================================================================
GOOGLE_SHEETS_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
GOOGLE_SHEETS_SPREADSHEET_ID=1xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# WHATSAPP API (Optional)
# ============================================================================
WHATSAPP_API_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
WHATSAPP_PHONE_NUMBER_ID=123456789012345

# ============================================================================
# DEVELOPMENT FLAGS
# ============================================================================
ENABLE_SOURCE_MAPS=false
ANALYZE=false
DISABLE_TELEMETRY=true

# ============================================================================
# PERFORMANCE MONITORING
# ============================================================================
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_SLOW_REQUEST_THRESHOLD=2000

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
